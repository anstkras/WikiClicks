<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statistics"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/colorNoLink"
        android:textSize="35sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/show_statistics"
        android:textColor="@color/colorPlainText"
        android:textSize="15sp" />


    <Button
        android:id="@+id/show_times_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/show_times"
        android:textColor="@color/colorPlainText"
        android:textSize="15sp" />

    <Button
        android:id="@+id/show_steps_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/show_steps"
        android:textColor="@color/colorPlainText"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
