<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:context=".activities.GetEndpointsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/choose_start_page"
        android:textColor="#000000"
        android:textSize="25sp"

        app:layout_constraintHorizontal_bias="0.15" />

    <SearchView
        android:id="@+id/choose_start_point"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:textColor="#0645AD"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/choose_end_page"
        android:textColor="#000000"

        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.15" />

    <SearchView
        android:id="@+id/choose_finish_point"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:textColor="#0645AD"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/random_button"
            style="@style/Widget.AppCompat.ActionButton"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:layout_weight="1"

            android:text="@string/random_returner"
            android:textColor="#0645AD"
            android:textSize="15sp" />

        <Button
            android:id="@+id/ok_button"
            style="@style/Widget.AppCompat.ActionButton"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:layout_weight="1"

            android:text="@string/start_game"
            android:textColor="#0645AD"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
