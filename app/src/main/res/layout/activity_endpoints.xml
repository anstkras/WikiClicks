<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GetEndpointsActivity">

    <SearchView
        android:id="@+id/choose_start_point"

        android:layout_width="290dp"
        android:layout_height="0dp"

        android:layout_marginTop="120dp"
        android:background="#eaf3ff"
        android:textColor="#DE000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <SearchView
        android:id="@+id/choose_finish_point"

        android:layout_width="290dp"
        android:layout_height="0dp"

        android:layout_marginTop="340dp"
        android:background="#eaf3ff"
        android:textColor="#DE000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/random_button"

        android:layout_width="120dp"
        android:layout_height="0dp"

        android:layout_marginTop="448dp"
        android:background="#eaf3ff"
        android:text="@string/random_returner"
        android:textColor="#DE000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ok_button"

        android:layout_width="120dp"
        android:layout_height="0dp"

        android:layout_marginTop="448dp"
        android:background="#eaf3ff"
        android:text="@string/start_game"
        android:textColor="#DE000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="303dp"
        android:layout_height="84dp"
        android:layout_marginTop="256dp"
        android:text="@string/choose_end_page"
        android:textColor="#36c"

        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="303dp"
        android:layout_height="84dp"
        android:layout_marginTop="24dp"
        android:text="@string/choose_start_page"
        android:textSize="25sp"
        android:textColor="#36c"

        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
